<?xml version="1.0" encoding="UTF-8" ?>
<!-- 무조건 첫줄 양식 -->
<!DOCTYPE configuration PUBLIC "-//mybatis.org/DTD config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <!-- confing 파일에서 사용되는 환경 변수 설정  -->
  <properties resource="model/mapper/mybatis.properties" />
  
  <!-- 클래스명을 별명들 설정 : Member = main.Member, Student = main.Student  -->
  <typeAliases>
  	<typeAlias type="model.users.Users" alias="Users"/>
  </typeAliases>
  
  <!-- Connection 객체  -->
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC" />
      <dataSource type="POOLED" >
         <property name="driver" value="${driver}"/>
         <property name="url" value="${url}"/>
         <property name="username" value="${username}"/>
         <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>
  
  <!-- sql 구문을 가진 파일 목록 -->
  <mappers>
  	<!-- mapper 패키지의 인터페이스들을 sql 구문으로 등록(추가 등록필요x) -->
  	<package name="model.mapper"/>
  </mappers>
</configuration>